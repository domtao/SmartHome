<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="match_parent">
    <include
        layout="@layout/common_header_bar"
        />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_blue"
            android:text="SD卡详情"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/wifi_config_input_bg"
            android:padding="10dp"
            android:layout_margin="10dp"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical|left"
                    android:text="SD卡总容量（M）"
                    />

                <TextView
                    android:id="@+id/capacity_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical|right"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:layout_gravity="bottom"
                    android:background="#cccccc" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical|left"
                    android:text="SD卡状态"
                    />

                <TextView
                    android:id="@+id/sdcard_status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical|right"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:layout_gravity="bottom"
                    android:background="#cccccc" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    >

                    <Button
                        android:id="@+id/format_btn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textColor="#ED5352"
                        android:text="SD卡格式化"
                        android:textSize="20sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_blue"
            android:text="录像设置"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/wifi_config_input_bg"
            android:padding="10dp"
            android:layout_margin="10dp"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/item_selector"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical|left"
                    android:text="录像覆盖"
                    />
                <CheckBox
                    android:id="@+id/record_fg_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:layout_gravity="bottom"
                    android:background="#cccccc" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/item_selector"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical|left"
                    android:text="声音录像"
                    />
                <CheckBox
                    android:id="@+id/record_voice_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:layout_gravity="bottom"
                    android:background="#cccccc" />
            </FrameLayout>

            <FrameLayout

                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:background="@drawable/item_selector"
                android:paddingRight="15dp"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical|left"
                    android:text="定时录像"
                    />
                <CheckBox
                    android:id="@+id/record_time_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:layout_gravity="bottom"
                    android:background="#cccccc" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/record_tiems_set_view"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/item_selector"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical|left"
                    android:text="录像定时设置"
                    />
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:src="@mipmap/arrow_icon"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:layout_gravity="bottom"
                    android:background="#cccccc" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/done_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/color_white"
                    android:text="完成"
                    android:textSize="20sp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    />

            </FrameLayout>
        </LinearLayout>
        </LinearLayout>
        </ScrollView>
</LinearLayout>
