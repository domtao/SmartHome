<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height50"
        android:background="@mipmap/zun_title_bg"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="添加用户"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/zun_body_bg"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/item_height5"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:text="姓名"/>

    <EditText
        android:id="@+id/userName"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height35"
        android:textCursorDrawable="@null"
        android:background="@drawable/edite_boder_square"
        android:textSize="@dimen/font_size_14"
        android:focusable="true"
        android:hint="@string/input_content"
        android:layout_margin="5dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:text="职位"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/userType"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_bg"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:dropDownVerticalOffset="50dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/remote_xl" />
            </RelativeLayout>

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电话"/>
    <EditText
        android:id="@+id/tel"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height35"
        android:textCursorDrawable="@null"
        android:background="@drawable/edite_boder_square"
        android:textSize="@dimen/font_size_14"
        android:hint="@string/input_content"
        android:textColorHint="@color/background_gray"
        android:focusable="true"
        android:layout_margin="5dp" />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称"/>

    <EditText
        android:id="@+id/nickName"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height35"
        android:textCursorDrawable="@null"
        android:background="@drawable/edite_boder_square"
        android:hint="@string/input_content"
        android:textSize="@dimen/font_size_14"
        android:textColorHint="@color/background_gray"
        android:focusable="true"
        android:layout_margin="5dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/add_line"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height50"
        android:background="@mipmap/zun_botton_bg"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancle_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/cancle"
            android:textColor="@color/font_close_press" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/add_line" />

        <Button
            android:id="@+id/sure_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="@string/sure"
            android:textColor="@color/font_open_press" />
    </LinearLayout>

</LinearLayout>