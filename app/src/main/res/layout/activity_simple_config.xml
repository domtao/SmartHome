<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@color/white" >

            <TextView
                android:id="@+id/backTxt"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/back_selector"
                android:gravity="center"
                android:text="@string/back"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="选择设备工作Wi-Fi"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_16" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_bg"/>
        </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_height20"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/imageState"
            android:layout_width="wrap_content"
            android:src="@mipmap/small_gateway"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="选择你要配对的网关"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height50"
        android:orientation="vertical"
        android:background="@color/white">
        <com.zunder.scrollview.widget.WheelView
            android:id="@+id/imageScrollView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_height50"
            android:layout_gravity="center_horizontal"
            app:wheelDividerSize="60dp"
            app:wheelItemCount="2"
            app:wheelItemSize="60dp"
            app:wheelOrientation="horizontal"
            app:wheelTextSize="@dimen/font_size_16" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10.0dip"
        android:gravity="center"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="10.0dip" >
            <EditText
                android:id="@+id/ssid"
                android:background="@drawable/edit_boder"
                android:layout_width="180dp"
                android:layout_marginLeft="@dimen/item_height20"
                android:layout_marginRight="@dimen/item_height20"
                android:layout_height="@dimen/item_height35"
                android:hint="您目前没有设置Wi-Fi"
                android:textSize="@dimen/font_size_14" />

            <EditText
                android:layout_marginTop="@dimen/item_height10"
                android:id="@+id/psk"
                android:layout_width="180dp"
                android:background="@drawable/edit_boder"
                android:layout_height="@dimen/item_height35"
                android:layout_marginLeft="@dimen/item_height20"
                android:layout_marginRight="@dimen/item_height20"
                android:hint="请输入Wi-Fi密码"
                android:textSize="@dimen/font_size_14"/>
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:textSize="@dimen/font_size_16"/>

    </LinearLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/item_height20"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="vertical" >

        <Button
            android:id="@+id/connect_network"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_shape"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/connect_network"
            android:textColor="@color/font_press"
            android:textSize="@dimen/font_size_16" />
        <Button
            android:id="@+id/search_network"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/item_height10"
            android:background="@drawable/button_boder_shape"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="搜索设备"
            android:textColor="@color/font_color"
            android:textSize="@dimen/font_size_16" />
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>