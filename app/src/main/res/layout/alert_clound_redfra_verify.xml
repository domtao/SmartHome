<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height50"
        android:background="@mipmap/zun_title_bg">

        <ImageView
            android:id="@+id/icoImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:background="@color/transparent" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_16" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/zun_body_bg"
        android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/item_height5"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:text="@string/product1"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/nameSpinner"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height35"
            android:dropDownVerticalOffset="50dp"
            android:background="@drawable/button_boder_square"
            android:layout_margin="5dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/down_arrow" />
    </RelativeLayout>


    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version_name"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/versionSpinner"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height35"
            android:background="@drawable/button_boder_square"
            android:dropDownVerticalOffset="50dp"
            android:layout_margin="5dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/down_arrow" />
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:text="@string/serialport"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/serialSpinner"
                android:layout_width="fill_parent"
                android:dropDownVerticalOffset="50dp"
                android:layout_height="@dimen/item_height35"
                android:background="@drawable/button_boder_square"
                android:layout_margin="5dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/down_arrow" />
        </RelativeLayout>
    </LinearLayout>



    <TextView  android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data"/>

    <EditText
        android:id="@+id/editTxt"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height35"
        android:background="@drawable/button_boder_square"
        android:hint="@string/hexadecimal"
        android:focusable="true"
        android:layout_margin="5dp" />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/add_line" />
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@mipmap/zun_botton_bg"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancle_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/cancle"
            android:textColor="@color/font_close_press" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/add_line" />

        <Button
            android:id="@+id/sure_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="@string/sure"
            android:textColor="@color/font_open_press" />
    </LinearLayout>

</LinearLayout>