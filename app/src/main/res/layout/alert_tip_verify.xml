<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
  style="@style/MyDialog"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="160dp"
        android:gravity="center"
        android:background="@mipmap/zun_bg_no"
        android:orientation="vertical">
    <TextView
                android:id="@+id/title_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/item_height10"
                android:text="提示"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/item_height10"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/message_tip"

                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="@dimen/item_height5"
                android:padding="@dimen/item_height10"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_size_14" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height45"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/sure_tip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="@string/sure"
                android:textColor="@color/font_open_press" />
        </LinearLayout>
</LinearLayout>
</LinearLayout>