<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="210dp"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height50"
        android:background="@mipmap/zun_title_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icoImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:background="@color/transparent" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_centerInParent="true"
            android:text="@string/tip"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/zun_body_bg"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="@dimen/item_height110">
    <EditText
        android:id="@+id/editName"
        android:layout_width="fill_parent"
        android:textColorHint="@color/background_gray"
        android:layout_height="@dimen/item_height35"
        android:textCursorDrawable="@null"
        android:background="@drawable/button_boder_square"
        android:hint="@string/input_content"
        android:textSize="@dimen/font_size_14"
        android:paddingLeft="@dimen/item_height5"
        android:layout_marginLeft="@dimen/item_height10"
        android:layout_marginRight="@dimen/item_height10"/>

    <EditText
        android:id="@+id/editValue"
        android:layout_width="fill_parent"
        android:paddingLeft="@dimen/item_height5"
        android:layout_height="@dimen/item_height35"
        android:textCursorDrawable="@null"
        android:background="@drawable/button_boder_square"
        android:textSize="@dimen/font_size_14"
        android:textColorHint="@color/background_gray"
        android:hint="@string/input_content"
        android:layout_marginTop="@dimen/item_height10"
        android:layout_marginLeft="@dimen/item_height10"
        android:layout_marginRight="@dimen/item_height10" />

    </LinearLayout>
   
    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/add_line"/>
    <LinearLayout
        android:background="@mipmap/zun_botton_bg"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height50"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/cancle_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/cancle"
            android:textColor="@color/font_close_press" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/add_line"/>
        <Button
            android:id="@+id/sure_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="@string/sure"
            android:textColor="@color/font_open_press" />

        <View
            android:id="@+id/search_view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/add_line"/>
        <Button
            android:id="@+id/search_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/searching"
            android:textColor="@color/font_color" />
    </LinearLayout>

</LinearLayout>