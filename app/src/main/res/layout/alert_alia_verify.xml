<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height50"
        android:background="@mipmap/zun_title_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icoImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_16" />
    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/zun_body_bg"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height35"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:textSize="@dimen/font_size_14"
        android:hint="@string/input_content"
        android:layout_margin="5dp" />

    <EditText
        android:id="@+id/edit2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height35"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:layout_margin="5dp"
        android:textSize="@dimen/font_size_14"
        android:hint="@string/input_content"
        android:layout_marginTop="5dp" />

    <EditText
        android:id="@+id/edit3"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height35"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:textSize="@dimen/font_size_14"
        android:textColorHint="@color/background_gray"
        android:hint="@string/input_content"
        android:layout_margin="5dp" />

    <EditText
        android:id="@+id/edit4"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height35"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:textColorHint="@color/background_gray"
        android:textSize="@dimen/font_size_14"
        android:hint="@string/input_content"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp" />

    <EditText
        android:id="@+id/edit5"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height35"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:textSize="@dimen/font_size_14"
        android:textColorHint="@color/background_gray"
        android:hint="@string/input_content"
        android:layout_margin="5dp" />

    <EditText
        android:id="@+id/edit6"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height35"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:textSize="@dimen/font_size_14"
        android:textColorHint="@color/background_gray"
        android:hint="@string/input_content"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp" />

    <EditText
        android:id="@+id/edit7"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height35"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:textSize="@dimen/font_size_14"
        android:textColorHint="@color/background_gray"
        android:hint="@string/input_content"
        android:layout_margin="5dp" />

    <EditText
        android:id="@+id/edit8"
        android:textColorHint="@color/background_gray"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height35"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:textSize="@dimen/font_size_14"
        android:layout_margin="5dp"
        android:hint="@string/input_content"
        android:layout_marginTop="5dp" />
</LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/add_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@mipmap/zun_botton_bg"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/sure_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="@string/sure"
            android:textColor="@color/font_open_press" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/add_line" />

        <Button
            android:id="@+id/cancle_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/cancle"
            android:textColor="@color/font_close_press" />
    </LinearLayout>

</LinearLayout>