<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height50"
    android:background="@color/whites"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_gravity="center"
        android:gravity="center" >

        <com.zunder.image.view.SmartImageView
            android:id="@+id/img"
            android:layout_width="@dimen/item_height40"
            android:layout_height="@dimen/item_height40"
            android:padding="3dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/roomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dip"
                android:layout_marginTop="5dip"
                android:text=""
                android:textColor="#000000"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/roomTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dip"
                android:layout_marginTop="5dip"
                android:textColor="#000000"
                android:visibility="gone"
                android:textSize="@dimen/font_size_14"/>
        </LinearLayout>

        <TextView
            android:id="@+id/typeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/item_height35"
            android:text="家居"
            android:textSize="@dimen/font_size_14"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:layout_gravity="right|center_vertical"
            android:src="@mipmap/index_arrow" />

    </RelativeLayout>

</LinearLayout>