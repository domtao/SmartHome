<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#F0F5F9"
    android:layout_height="match_parent">
    <include
        layout="@layout/common_header_bar"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@color/color_white"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black"
                        android:textSize="15sp"
                        android:layout_gravity="center_vertical|left"
                        android:text="移动报警"
                        />
                    <CheckBox
                        android:id="@+id/move_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"

                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.01dp"
                        android:layout_gravity="bottom"
                        android:background="#cccccc" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/move_strong_view"
                    android:layout_width="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@drawable/item_selector"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black"
                        android:textSize="15sp"
                        android:layout_gravity="center_vertical|left"
                        android:text="移动灵敏度"
                        />

                    <TextView
                        android:id="@+id/move_strong_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black"
                        android:textSize="15sp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="25dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:src="@mipmap/arrow_icon"
                        />
                </FrameLayout>
            </LinearLayout>
            <!--报警输入 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:background="@color/color_white"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black"
                        android:textSize="15sp"
                        android:layout_gravity="center_vertical|left"
                        android:text="报警输入布防"
                        />
                    <CheckBox
                        android:id="@+id/io_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"

                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.01dp"
                        android:layout_gravity="bottom"
                        android:background="#cccccc" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/io_strong_view"
                    android:layout_width="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@drawable/item_selector"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black"
                        android:textSize="15sp"
                        android:layout_gravity="center_vertical|left"
                        android:text="触发电平"
                        />

                    <TextView
                        android:id="@+id/io_strong_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black"
                        android:textSize="15sp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="25dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:src="@mipmap/arrow_icon"
                        />
                </FrameLayout>
            </LinearLayout>

            <!--声音侦测 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:background="@color/color_white"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black"
                        android:textSize="15sp"
                        android:layout_gravity="center_vertical|left"
                        android:text="声音报警"
                        />
                    <CheckBox
                        android:id="@+id/voice_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"

                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.01dp"
                        android:layout_gravity="bottom"
                        android:background="#cccccc" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/voice_strong_view"
                    android:layout_width="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@drawable/item_selector"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black"
                        android:textSize="15sp"
                        android:layout_gravity="center_vertical|left"
                        android:text="灵敏度"
                        />

                    <TextView
                        android:id="@+id/voice_strong_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black"
                        android:textSize="15sp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="25dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:src="@mipmap/arrow_icon"
                        />
                </FrameLayout>
            </LinearLayout>

            <!--PIR 报警 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/color_white"
                android:layout_marginTop="5dp"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical|left"
                    android:text="PIR报警"
                    />
                <CheckBox
                    android:id="@+id/pir_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"

                    />
            </FrameLayout>

            <!-- 报警 录像 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/color_white"
                android:layout_marginTop="5dp"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical|left"
                    android:text="报警录像"
                    />
                <CheckBox
                    android:id="@+id/record_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"

                    />
            </FrameLayout>
            <!-- 报警邮件-->
            <FrameLayout
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/color_white"
                android:layout_marginTop="5dp"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical|left"
                    android:text="报警邮件"
                    />
                <CheckBox
                    android:id="@+id/mail_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/alarm_time_set_view"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/item_selector"
                android:layout_marginTop="5dp"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical|left"
                    android:text="定时报警设置"
                    />
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:src="@mipmap/arrow_icon"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/done_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/color_white"
                    android:text="完成"
                    android:textSize="20sp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    />

            </FrameLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
