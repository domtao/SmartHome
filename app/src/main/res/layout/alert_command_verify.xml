<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height50"
        android:background="@mipmap/zun_title_bg"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/icoImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:background="@color/transparent" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/tip"
            android:textColor="@android:color/black"
            android:textSize="18dp" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/add_line" />
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/arceLay"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/arceSpinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:layout_margin="5dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/down_arrow" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/line_long" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/radioLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/Gradio"
                android:layout_marginLeft="5dp"
                android:checked="true"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Big"/>
            <RadioButton
                android:id="@+id/Lradio"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="@string/Less"/>

        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/add_line" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@mipmap/line_long" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/editTxt"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height40"
            android:inputType="number"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:textColorHint="@color/background_gray"
            android:hint="@string/input_num1"
            android:textSize="@dimen/font_size_16"
            android:layout_margin="5dp" />
        <ImageView
            android:id="@+id/timeImage"
            android:layout_width="wrap_content"
            android:src="@mipmap/cycle_img"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/add_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height50"
        android:background="@mipmap/zun_botton_bg"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancle_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/cancle"
            android:textColor="@color/font_close_press" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/add_line" />
        <Button
            android:id="@+id/sure_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="@string/sure"
            android:textColor="@color/font_open_press" />
    </LinearLayout>

</LinearLayout>