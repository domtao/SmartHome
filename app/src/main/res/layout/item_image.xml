<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dip"
    android:background="@drawable/bg_gv">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/item_height10"
        android:paddingLeft="@dimen/item_height20"
        android:paddingRight="@dimen/item_height20"
        android:paddingBottom="@dimen/item_height5"
        android:orientation="vertical"
        android:gravity="center">
        <com.zunder.image.view.SmartImageView
            android:id="@+id/imgSrc"
            android:layout_width="@dimen/item_height60"
            android:layout_height="@dimen/item_height60"
            android:src="@mipmap/load_img"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/ImageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_height5"
            android:maxLines="1"
            android:text="@string/save"
            android:textColor="@color/commo_text_color"
            android:textSize="@dimen/font_size_12" />
    </LinearLayout>

</RelativeLayout>