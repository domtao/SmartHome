<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="160dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height50"
        android:background="@mipmap/zun_title_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icoImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:background="@color/transparent" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height60"
        android:background="@mipmap/zun_body_bg"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/editTxt"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height35"
            android:layout_centerInParent="true"
            android:textSize="@dimen/font_size_14"
            android:textCursorDrawable="@null"
            android:background="@drawable/button_boder_square"
            android:textColorHint="@color/background_gray"
            android:hint="@string/input_num1"
            android:paddingLeft="@dimen/item_height5"
            android:layout_margin="5dp" />
        <ImageView
            android:id="@+id/timeImage"
            android:layout_width="wrap_content"
            android:src="@mipmap/cycle_img"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/add_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height50"
        android:background="@mipmap/zun_botton_bg"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancle_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/cancle"
            android:textColor="@color/font_close_press" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/add_line" />

        <Button
            android:id="@+id/sure_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="@string/sure"
            android:textColor="@color/font_open_press" />
    </LinearLayout>

</LinearLayout>