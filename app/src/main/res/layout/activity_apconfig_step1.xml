<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

  <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@color/green" >

            <TextView
                android:id="@+id/backTxt"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/back_selector"
                android:gravity="center"
                android:text="@string/back"
                android:textColor="@color/whites"
                android:textSize="17.0sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/ap_one"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_divider_height"
        android:background="@color/add_line" />

    <TextView
        android:id="@+id/apconfig_note1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_text_normal"
        android:lineSpacingExtra="6dp"
        android:padding="15dp"
        android:text="@string/apconfig_rak475_note"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/next"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_selector"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="NEXT"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>