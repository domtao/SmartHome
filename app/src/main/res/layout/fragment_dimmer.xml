<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <LinearLayout
    android:layout_margin="@dimen/item_height10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fragmen_main_shape"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/img_bg"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.2"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt0"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/blue"/>
                    <TextView
                        android:id="@+id/txt1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/red"/>
                    <TextView
                        android:id="@+id/txt2"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/reseda"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt3"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/orange"/>
                    <TextView
                        android:id="@+id/txt4"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/possible_result_points"/>
                    <TextView
                        android:id="@+id/txt5"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/pink"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/liveLayout"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.zunder.scrollview.PureVerticalSeekBar
                        android:id="@+id/liveBar"
                        android:layout_width="13dp"
                        android:layout_height="150dp"/>
                    <TextView
                        android:id="@+id/liveTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_10"
                        android:text="亮度"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/satuLayout"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.zunder.scrollview.PureVerticalSeekBar
                        android:id="@+id/satuBar"
                        android:layout_width="13dp"
                        android:layout_height="150dp"/>
                    <TextView
                        android:id="@+id/satuTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="饱和度"
                        android:textSize="@dimen/font_size_10"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/controlLayout"
                android:layout_marginRight="@dimen/item_height10"
                android:layout_marginLeft="@dimen/item_height10"
                android:layout_marginBottom="@dimen/item_height10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
            <Button
                android:id="@+id/showBtn"
                android:background="@drawable/button_show_shape"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/item_height30"
                android:layout_height="@dimen/item_height30"
                android:textSize="@dimen/font_size_12"
                android:layout_marginBottom="@dimen/item_height10"
                android:visibility="gone"
                android:textColor="@color/white"
                android:text="展开"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/item_height20"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/allON"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/zun_button"
                android:text="全开"
                android:textColor="@color/font_press"
                android:textSize="@dimen/font_size_16" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/allOFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/zun_button"
                android:text="全关"
                android:textColor="@color/font_press"
                android:textSize="@dimen/font_size_16" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>