<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height50"
            android:background="@mipmap/zun_title_bg"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="@string/threekey"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>


        <TextView
            android:background="@mipmap/zun_body_bg"
            android:id="@+id/message_tv"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height80"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="10"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/add_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height50"
            android:background="@mipmap/zun_botton_bg"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cancle_bt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="@string/cancle"
                android:textSize="@dimen/font_size_16"
                android:textColor="@color/font_close_press" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@mipmap/line_long" />

            <Button
                android:id="@+id/sure_bt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/alert_btn_selector"
                android:text="@string/sure"
                android:textColor="@color/blue"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>