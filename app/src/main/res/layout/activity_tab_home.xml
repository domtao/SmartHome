<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <com.zunder.image.view.SmartImageView
        android:id="@+id/smartImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/zun_roombg"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.25"
            android:layout_height="match_parent">
            <RadioGroup
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/roomRadio"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="@color/transparent"
                    android:button="@null"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/radiobutton_textcolor"
                    android:layout_marginRight="10dp"
                    android:textSize="@dimen/font_size_16"
                    android:text="房间"/>
                <RadioButton
                    android:id="@+id/deviceRadio"
                    android:layout_marginLeft="10dp"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/transparent"
                    android:button="@null"
                    android:textSize="@dimen/font_size_16"
                    android:textColor="@color/radiobutton_textcolor"
                    android:text="设备"/>
            </RadioGroup>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/homeEdite"
                    android:layout_marginTop="-10dp"
                    android:layout_width="@dimen/item_height110"
                    android:layout_height="@dimen/item_height50"
                    android:background="@mipmap/zun_home_select"
                    android:textColor="@color/font_press"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/item_height10"
                    android:text="默认家庭"/>
                <ImageView
                    android:id="@+id/setImage"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/item_height30"
                    android:layout_height="@dimen/item_height20"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/zun_device_set"/>
            </RelativeLayout>
            <fragment
                android:id="@+id/mainFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.zunder.smart.activity.home.MainFragment"
                android:background="@color/green"/>
            <fragment
                android:id="@+id/dimmerFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.zunder.smart.activity.home.DimmerFragment"
                android:background="@color/green"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:alpha="0.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.75"
            android:background="@color/white"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.zunder.scrollview.widget.WheelView
                        android:id="@+id/deviceScrollView"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/item_height60"
                        android:layout_gravity="center_horizontal"
                        app:wheelDividerSize="120dp"
                        app:wheelItemCount="6"
                        app:wheelItemSize="120dp"
                        app:wheelOrientation="horizontal"
                        app:wheelTextSize="16sp" />
                </LinearLayout>
                <ImageButton
                    android:layout_alignParentRight="true"
                    android:id="@+id/deviceButton"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/item_height30"
                    android:layout_marginRight="10dp"
                    android:layout_height="@dimen/item_height30"
                    android:background="@mipmap/zun_device_more" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.zunder.scrollview.widget.WheelView
                        android:id="@+id/roomScrollView"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/item_height60"
                        android:layout_gravity="center_horizontal"
                        app:wheelDividerSize="120dp"
                        app:wheelItemCount="6"
                        app:wheelItemSize="120dp"
                        app:wheelOrientation="horizontal"
                        app:wheelTextSize="16sp" />
                </LinearLayout>

                <ImageButton
                    android:layout_alignParentRight="true"
                    android:id="@+id/roomButton"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/item_height30"
                    android:layout_marginRight="10dp"
                    android:layout_height="@dimen/item_height30"
                    android:background="@mipmap/zun_room_setting" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

<fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/roomFragment"
        android:name="com.zunder.smart.activity.room.RoomFragment"/>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/roomAddFragment"
        android:name="com.zunder.smart.activity.room.RoomAddFragment"/>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/deviceAllFragment"
        android:name="com.zunder.smart.activity.device.DeviceAllFragment"/>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.zunder.smart.activity.procase.ProCaseFragment"
        android:id="@+id/proCaseFragment"/>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.zunder.smart.activity.procase.ProCaseAddFragment"
        android:id="@+id/proCaseAddFragment"/>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.zunder.smart.activity.device.DeviceTypeFragment"
        android:id="@+id/deviceTypeFragment"
        />
</RelativeLayout>